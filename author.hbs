{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{#author}}
<div class="cover-wrap">
	<div class="container">
		<div class="author-cover {{#if cover_image}}" style="background-image: url({{cover_image}});"{{else}}no-image"{{/if}}>
			<div class="overlay">
				<div class="avatar-wrap">
					{{#if profile_image}}
						<img src="{{profile_image}}" alt="Author image" class="avatar">
						{{else}}
						<img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar">
					{{/if}}
				</div>
				<h3 class="author-name">
					{{name}}
				</h3>
				<div class="meta-info">
					<span class="post-count"><i class="fa fa-pencil-square-o fa-fw"></i>{{plural ../pagination.total empty=(t "No posts") singular=(t "1 post") plural=(t "% posts")}}</span>
					{{#if location}}
					<span class="loaction"><i class="fa fa-map-marker fa-fw"></i>{{location}}</span>
					{{/if}}
					{{#if website}}
					<span class="website"><i class="fa fa-globe fa-fw"></i><a href="{{website}}" targer="_BLANK">Website</a></span>
					{{/if}}
					{{#if twitter}}
					<span class="twitter"><i class="fa fa-twitter fa-fw"></i><a href="{{twitter_url}}">Twitter</a></span>
					{{/if}}
					{{#if facebook}}
					<span class="facebook"><i class="fa fa-facebook fa-fw"></i><a href="{{facebook_url}}">Facebook</a></span>
					{{/if}}
				</div>
				{{#if bio}}
				<div class="bio">{{bio}}</div>
				{{/if}}
			</div>
		</div>
	</div>
</div>
{{/author}}
<div class="container">
	<div class="row">
		<div class="col-md-8">
			<div class="row default-layout">
			{{#foreach posts}}
			{{#if @first}}
			<!-- start post -->
			<article class="col-sm-12 post-wrap first-post">
				<div class="featured-media">
					{{#if feature_image}}
					<a href="{{url}}" title="{{{title}}}">
						<div class="image-container" style="background-image: url({{feature_image}});">
						</div>
					</a>
					{{/if}}
					{{#if "tags"}}
					<div class="tag-list">{{tags separator=""}}</div>
					{{/if}}
					{{#if featured}}
                    <div class="featured"><i class="fa fa-star"></i>{{t "Featured"}}</div>
                    {{/if}}
				</div>
				
				<h2 class="title h3"><a href="{{url}}">{{{title}}}</a></h2>
				<div class="post-meta">
					{{#foreach authors}}
					<span class="author">
	                    <i class="fa fa-user"></i>
	                    <a href="{{url}}">{{name}}</a>
	                </span>
	                {{/foreach}}
	                <span class="date">
	                    <i class="fa fa-calendar-o"></i>
	                    {{date format="MMM DD, YYYY"}}
	                </span>
	                <span class="comment">
	                    <i class="fa fa-comment-o"></i>
	                    <a href="{{url}}#disqus_thread">{{t "0 Comments"}}</a>
	                </span>
				</div>
				<div class="post-entry">
					{{excerpt}}
				</div>
				<a class="permalink" href="{{url}}">{{t "Read More..."}}</a>
			</article>
			<!-- end post -->
			{{else}}
			<!-- start post -->
			<article class="col-sm-6 post-wrap">
				<div class="featured-media">
					{{#if feature_image}}
					<a href="{{url}}" title="{{{title}}}">
						<div class="image-container" style="background-image: url({{feature_image}});">
						</div>
					</a>
					{{/if}}
					{{#if "tags"}}
					<div class="tag-list">{{tags separator=""}}</div>
					{{/if}}
					{{#if featured}}
                    <div class="featured"><i class="fa fa-star"></i>{{t "Featured"}}</div>
                    {{/if}}
				</div>
				
				<h2 class="title h3"><a href="{{url}}">{{{title}}}</a></h2>
				<div class="post-meta">
					{{#foreach authors}}
					<span class="author">
	                    <i class="fa fa-user"></i>
	                    <a href="{{url}}">{{name}}</a>
	                </span>
	                {{/foreach}}
	                <span class="date">
	                    <i class="fa fa-calendar-o"></i>
	                    {{date format="MMM DD, YYYY"}}
	                </span>
	                <span class="comment">
	                    <i class="fa fa-comment-o"></i>
	                    <a href="{{url}}#disqus_thread">{{t "0 Comments"}}</a>
	                </span>
				</div>
				<div class="post-entry">
					{{excerpt}}
				</div>
				<a class="permalink" href="{{url}}">{{t "Read More..."}}</a>
			</article>
			<!-- end post -->
            {{#if @odd}}
            <div class="clearfix"></div>
            {{/if}}
			{{/if}}
			{{/foreach}}
			</div>
			{{pagination}}
		</div>
		{{> sidebar}}
	</div>
</div>