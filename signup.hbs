{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="container container-members">
	<div class="row">
		<div class="col-md-12">
			<div class="row default-layout">
			<!-- start post -->
			<article class="col-sm-12 post-wrap full-post">
                {{#if @member.paid}}

                    {{!-- Logged in, paying member: Redirect home --}}
                    <script>window.location = '/';</script>

                {{else if @member}}
                <h1 class="title text-center">{{t "Choose your subscription plan"}}</h1>
				<div class="sign-up-description text-center">
					{{t "Unlock full access to"}} {{@site.title}} {{t "and see the entire library of members-only premium content & updates"}}
				</div>
                <div class="pricing-table-wrap">
                    {{> members/pricing-table-monthly}}
                    {{> members/pricing-table-yearly}}
                </div>

                {{else}}
				<h1 class="title text-center">{{t "Sign up to"}} {{@site.title}}</h1>
				<div class="sign-up-description text-center">
					{{t "Signup to access free membrs only articles"}}
				</div>
                <form data-members-form="signin" class="members-form">
                    <div class="input-wrap">
                        <input data-members-email type="email" class="required email" id="email" placeholder="{{t "Your email address"}}" required/>
                        <button class="btn btn-default" type="submit"><span class="loading-spinner"></span>{{t "Subscribe"}}</button>
                    </div>
                    <div class="messages-wrap text-center">
                        <div class="message-success">
                            <strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete sign in"}}
                        </div>
                        <div class="message-error">
                            <strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}
                        </div>
                    </div>
                </form>
                <div class="text-center">
                    {{t "Already have an account?"}} <a href="/signin/">{{t "Sign in"}}</a>
                </div>
                {{/if}}
			</article>
			<!-- end post -->
			</div>
		</div>
	</div>
</div>