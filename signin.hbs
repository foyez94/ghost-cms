{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="container container-members">
	<div class="row">
		<div class="col-md-12">
			<div class="row default-layout">
			{{#if @member}}
			<script>window.location = '/account';</script>
			{{else}}
			<!-- start post -->
			<article class="col-sm-12 post-wrap full-post">
				<h1 class="title text-center">{{t "Welcome back!"}}</h1>
				<div class="sign-up-description text-center">
					{{t "Sign into your account again for full access"}}
				</div>
				{{!-- <div class="post-entry"> --}}
					<form data-members-form="signin" class="members-form">
						<div class="input-wrap">
							<input data-members-email type="email" class="required email" id="email" placeholder="{{t "Your email address"}}" required/>
							<button class="btn btn-default" type="submit"><span class="loading-spinner"></span>{{t "Send login link"}}</button>
						</div>
					    <div class="messages-wrap text-center">
							<div class="message-success">
								<strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete sign in"}}
							</div>
							<div class="message-error">
								<strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}
							</div>
						</div>
					</form>
					<div class="text-center">
						{{t "Don't have an account yet?"}} <a href="/signup/">{{t "Sign up"}}</a>
					</div>
				{{!-- </div> --}}
			</article>
			<!-- end post -->
			</div>
			{{/if}}
		</div>
	</div>
</div>