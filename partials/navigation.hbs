<div id="navbar" class="navbar-collapse collapse">
	<ul class="nav navbar-nav">
		{{#foreach navigation}}
		<li class="{{slug}} {{#if current}}current-menu-item{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
		{{/foreach}}
	</ul>
	<form class="navbar-form navbar-right" id="subscribe-header">
		<div class="input-group">
			<input name="email" type="email" class="form-control" placeholder="Subscribe for Updates on Guns and Gear" required>
			<span class="input-group-btn">
				<button type="submit" class="btn btn-default">Subscribe</button>
			</span>
		</div>
	</form>
</div>
