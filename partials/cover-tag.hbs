<div class="cover-wrap">
	<div class="container">
		<div class="tag-cover {{#if tag.feature_image}}" style="background-image: url({{tag.feature_image}});"{{else}}no-image"{{/if}}>
			<div class="overlay">
					<h2 class="tag-title h3">{{t "Tag:"}} {{tag.name}}</h2>
					<div class="meta-info">
						<span><i class="fa fa-signal fa-fw"></i>{{t "Total"}} {{plural pagination.total empty=(t "0 Post") singular=(t "% Post") plural=(t "% Posts")}}</span>
					</div>
					{{#if tag.description}}
					<p class="description tag-description">{{tag.description}}</p>
					{{/if}}
			</div>
		</div>
	</div>
</div>