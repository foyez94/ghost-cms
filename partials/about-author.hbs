<!-- start about the author -->
{{#foreach authors}}
<div class="about-author col-sm-12 clearfix">
	{{#if profile_image}}
		<a href="{{url}}" title="{{name}}"><img src="{{profile_image}}" alt="Author image" class="avatar pull-left"></a>
		{{else}}
		<a href="{{url}}" title="{{name}}"><img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar pull-left"></a>
	{{/if}}
	<div class="details">
		<div class="author">
			<a href="{{url}}" class="h4">{{name}}</a>
		</div>
		{{#if bio}}
		<div class="bio">
			{{bio}}
		</div>
		{{/if}}
		<div class="meta-info">
			{{#if location}}
			<span class="loaction"><i class="fa fa-map-marker fa-fw"></i>{{location}}</span>
			{{/if}}
			{{#if website}}
			<span class="website"><i class="fa fa-link fa-fw"></i><a href="{{website}}" targer="_BLANK">Website</a></span>
			{{/if}}
			{{#if twitter}}
			<span class="twitter"><i class="fa fa-twitter fa-fw"></i><a href="{{twitter_url}}">Twitter</a></span>
			{{/if}}
			{{#if facebook}}
			<span class="facebook"><i class="fa fa-facebook fa-fw"></i><a href="{{facebook_url}}">Facebook</a></span>
			{{/if}}
		</div>
	</div>
</div>
{{/foreach}}
<!-- end about the author -->