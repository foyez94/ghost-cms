{{#if @labs.members}}
<!-- start tag cloud widget -->
<div class="widget">
	<h4 class="h5 title"><span>{{t "Subscribe"}}</span></h4>
	<div class="content newsletter">
		<p>{{t "For our news update subscribe to our newsletter. You can unsubscribe anytime."}}</p>
		<form data-members-form="subscribe" class="subscribe-form">
			<div class="input-group">
				<input data-members-email type="email" class="required email" id="email" placeholder="{{t "yourmail@example.com"}}" required/>
			</div>
			<div class="input-group">
				<button class="btn btn-primary" type="submit"><span class="loading-spinner"></span>{{t "Subscribe"}}</button>
			</div>
			<div class="messages-wrap text-center">
				<div class="message-success">
					<strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete subscription"}}
				</div>
				<div class="message-error">
					<strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}
				</div>
			</div>
		</form>
	</div>
</div>
<!-- end tag cloud widget -->
{{/if}}